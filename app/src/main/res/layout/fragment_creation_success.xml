<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_createSowing.CreationSuccessFragment"
    android:id="@+id/fragment_success"
    android:background="@color/fon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="32dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Посев успешно создан"
                    android:fontFamily="@font/cygre_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Всю информация можно посмотерть в разделе Мои посевы"
                    android:fontFamily="@font/cygre_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray2"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </LinearLayout>


            <Button
                android:id="@+id/plant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/cygre_regular"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:text="мои посевы"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/black"
                app:cornerRadius="4dp"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/cygre_regular"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:text="главная"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/fon"
                app:cornerRadius="0dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>