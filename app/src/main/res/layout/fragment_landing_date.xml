<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_createSowing.LandingDateFragment"
    android:background="@color/fon"
    android:id="@+id/fragmentDate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="32dp">


        <!-- Шкала шагов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="5.5"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1.5"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black" />


            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius" />
        </LinearLayout>

        <!-- Текст -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Укажите дату посадки"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мы подскажем примерную дату сбора урожая"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:textColor="@color/gray2"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Основной контент -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/editDateStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:textSize="40sp"
                android:textColor="@color/gray2"
                android:gravity="center"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:hint="Дата посадки" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_dash"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/editDateEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:textSize="40sp"
                android:textColor="@color/gray2"
                android:gravity="center"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:hint="Дата сбора" />

        </LinearLayout>

        <Button
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:fontFamily="@font/cygre_regular"
            android:gravity="center"
            android:text="продолжить"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingVertical="12dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:backgroundTint="@color/gray4"
            app:cornerRadius="4dp"/>


    </LinearLayout>

</FrameLayout>