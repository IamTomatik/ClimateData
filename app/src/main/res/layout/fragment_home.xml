<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fon"
    tools:context=".HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/background_gradient"/>

    <!-- -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- воронеж и иконка -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/citi_group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/citi_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/cygre_regular"
                        android:text="Воронеж"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_bottom"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"/>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_notify"
                    android:visibility="invisible" />

            </LinearLayout>

            <!-- -->
            <!-- ПОГОДА -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--  -->
                <!-- блок с погодой -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <!-- дата и день недели -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:includeFontPadding="false"
                            android:text="23 Ноября"
                            android:textColor="@color/black"
                            android:textSize="24sp" />



                        <TextView
                            android:id="@+id/dayWeek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:includeFontPadding="false"
                            android:text="понедельник"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                    <!-- градусы -->
                    <TextView
                        android:id="@+id/gradus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/cygre_regular"
                        android:includeFontPadding="false"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="64sp"
                        android:gravity="center"/>

                    <!-- блок с показателями -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:weightSum="4"
                        android:gravity="center">

                        <!-- влажность -->
                        <LinearLayout
                            android:id="@+id/vlashnost"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="70dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- иконка и поазатель -->

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_vlashnost" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/humidity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="згл"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:layout_marginLeft="2dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="%"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- ветер -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="70dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- иконка и поазатель -->

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_wind" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/wind"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="згл"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:layout_marginLeft="2dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="м/с"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"/>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <!-- осадки -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="70dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- иконка и поазатель -->

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_rain" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/precipitation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="згл"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:layout_marginLeft="2dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="мм"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- давление -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="70dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- иконка и поазатель -->

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_pressure" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/pressure"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="згл"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:layout_marginLeft="2dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="16sp"/>

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/black" />

                    <!-- блок часовой погоды -->
                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/hourlyContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>


            </LinearLayout>


            <!-- мои посадки-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Мои посадки"
                    android:fontFamily="@font/cygre_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/btn_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_sorting"/>

                        <TextView
                            android:id="@+id/Text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="текст выбора"
                            android:fontFamily="@font/cygre_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginLeft="4dp"/>


                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="показать все"
                        android:fontFamily="@font/cygre_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginLeft="4dp"
                        android:visibility="invisible"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/list_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Реклама"
                    android:fontFamily="@font/cygre_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/reclama"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>