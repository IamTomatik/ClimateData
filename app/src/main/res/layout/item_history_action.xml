<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/gray5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Текст действия, занимает всё доступное место -->
        <TextView
            android:id="@+id/actionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Полив выполнен"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/cygre_regular"
            android:includeFontPadding="false" />

        <!-- Время с иконкой -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_ocklok"
                android:contentDescription="Время события"/>

            <TextView
                android:id="@+id/actionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="2 ч назад"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
