<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalysisFragment"
    android:background="@color/fon"
    android:id="@+id/fragment_analysis">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Кнопка "назад" -->
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Назад" />

            <!-- Заголовок -->
            <TextView
                android:id="@+id/namePlant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="название посева"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false" />

        </FrameLayout>


        <!--карточка выбора-->
        <LinearLayout
            android:id="@+id/choicePlant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/choiceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:text="Выберете культуру для анализа"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/recyclerViewPlants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>






        <ScrollView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/containerLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--фильтр времени-->
                <HorizontalScrollView
                    android:id="@+id/horizontalScroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/categoryContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        >

                        <Button
                            android:id="@+id/allTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:text="все время"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:text="день"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/week"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:text="неделя"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:text="месяц"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>
                    </LinearLayout>

                </HorizontalScrollView>
                
                <LinearLayout
                    android:id="@+id/graphic"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1"/>


                <!--показатели-->
                <LinearLayout
                    android:id="@+id/pokazateli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <!--средняя температура-->
                        <LinearLayout
                            android:id="@+id/temperatyre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_bg"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_marginRight="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cygre_regular"
                                android:includeFontPadding="false"
                                android:text="средняя\nтемпература"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:lines="2"
                                android:ellipsize="none"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp">

                                <TextView
                                    android:id="@+id/avTemperature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cygre_regular"
                                    android:includeFontPadding="false"
                                    android:text="00.0"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cygre_regular"
                                    android:includeFontPadding="false"
                                    android:text="°C"
                                    android:textColor="@color/black"
                                    android:textSize="32sp"
                                    android:layout_marginLeft="8dp"/>


                            </LinearLayout>
                        </LinearLayout>


                        <!--Средняя влаж.воздуха-->
                        <LinearLayout
                            android:id="@+id/humidityA"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_bg"
                            android:padding="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cygre_regular"
                                android:includeFontPadding="false"
                                android:text="средняя\nвлаж.воздуха"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:lines="2"
                                android:ellipsize="none" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp">

                                <TextView
                                    android:id="@+id/avHumidityAir"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cygre_regular"
                                    android:includeFontPadding="false"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cygre_regular"
                                    android:includeFontPadding="false"
                                    android:text="%"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"
                                    android:layout_marginLeft="8dp"/>


                            </LinearLayout>




                        </LinearLayout>
                        
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="8dp">

                        <!--осадки-->
                        <LinearLayout
                            android:id="@+id/precipitation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_bg"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_marginRight="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cygre_regular"
                                android:includeFontPadding="false"
                                android:text="суммарные\nосадки"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:lines="2"
                                android:ellipsize="none"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp">

                                <TextView
                                    android:id="@+id/avPrecipitation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cygre_regular"
                                    android:includeFontPadding="false"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cygre_regular"
                                    android:includeFontPadding="false"
                                    android:text="%"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"
                                    android:layout_marginLeft="8dp"/>


                            </LinearLayout>
                        </LinearLayout>


                        <!--Средняя влаж.почвы-->
                        <LinearLayout
                            android:id="@+id/humidityC"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_bg"
                            android:padding="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cygre_regular"
                                android:includeFontPadding="false"
                                android:text="средняя\nвлаж.почвы"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:lines="2"
                                android:ellipsize="none"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp">

                                <TextView
                                    android:id="@+id/avHumidityCarbon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cygre_regular"
                                    android:includeFontPadding="false"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cygre_regular"
                                    android:includeFontPadding="false"
                                    android:text="%"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"
                                    android:layout_marginLeft="8dp"/>


                            </LinearLayout>




                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>