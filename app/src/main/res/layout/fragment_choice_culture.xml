<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentChoiceCulture"
    tools:context=".fragment_createSowing.ChoiceCultureFragment"
    android:background="@color/fon">

    <!--общий-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!--шкала-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="5.5">

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1.5"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black"/>

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"/>

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"/>

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"/>

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"/>
        </LinearLayout>

        <!--текст -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберете культуру"
            android:fontFamily="@font/cygre_regular"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="24sp"

            android:layout_marginTop="40dp"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:iconifiedByDefault="false"
                android:queryHint="@string/search_hint"
                android:inputType="textVisiblePassword"
                android:imeOptions="actionSearch"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/bg_search_view" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="все"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>

                    <Button
                        android:id="@+id/cereals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="зерновые"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>

                    <Button
                        android:id="@+id/root_vegetables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="корнеплодные"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>


                    <Button
                        android:id="@+id/feed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="кормовые"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>

                    <Button
                        android:id="@+id/legumes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="бобовые"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>

                    <Button
                        android:id="@+id/vegetable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="овощные"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>

                    <Button
                        android:id="@+id/berry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="ягодные"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>

                    <Button
                        android:id="@+id/oilseeds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="масличные"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>

                    <Button
                        android:id="@+id/technical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="технические"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginRight="8dp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>


                    <Button
                        android:id="@+id/floral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:text="цветочные"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:backgroundTint="@null"
                        app:cornerRadius="8dp"/>


                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:transitionName="Список культур">



            <LinearLayout
                android:id="@+id/list_rops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>


        </ScrollView>

    </LinearLayout>




</FrameLayout>