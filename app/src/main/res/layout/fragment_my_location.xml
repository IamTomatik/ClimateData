<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_createLocation.MyLocationFragment"
    android:background="@color/fon"
    android:id="@+id/fragment_my_location_">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/containerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- шапка -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- название -->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Мои локации"
                    android:fontFamily="@font/cygre_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:gravity="center"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/addPlant"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add"/>

            </LinearLayout>

            <!-- поиск и фильтр -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:iconifiedByDefault="false"
                    android:queryHint="@string/search_hint"
                    android:inputType="textVisiblePassword"
                    android:imeOptions="actionSearch"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/bg_search_view" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="все"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/greenhouse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="теплица"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/pole"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="поле"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>


                        <Button
                            android:id="@+id/garden_bed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="грядка"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="другое"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>





                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:transitionName="Список участков">


                <LinearLayout
                    android:id="@+id/list_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"/>

            </ScrollView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>