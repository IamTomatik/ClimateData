<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_createSowing.ChoiceNameFragment"
    android:background="@color/fon"
    android:id="@+id/fragmentChoiceRegion">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!--шкала-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="4.5">

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black"/>


            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1.5"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black"/>


            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"/>

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Укажите регион"
            android:fontFamily="@font/cygre_regular"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginTop="40dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- инпуты-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/cygre_regular"
                android:hint="Россия"
                android:inputType="textVisiblePassword"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textColorHint="@color/black"
                android:layout_marginBottom="16dp"/>

            <Spinner
                android:id="@+id/spinner_region"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/cygre_regular"
                android:singleLine="true"
                android:background="@drawable/spinner_underline"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/gray2" />

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/cygre_regular"
                android:singleLine="true"
                android:background="@drawable/spinner_underline"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="использовать по умолчанию"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="далее значение будет использователься поумолчанию"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:textColor="@color/gray2"
                android:textSize="13sp"/>

        </LinearLayout>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/cygre_regular"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:text="продолжить"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/gray4"
                app:cornerRadius="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="приносим свои извенения приложение доступно только на территории Российской Федерации"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:textColor="@color/gray2"
                android:textSize="13sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>