<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantFragment"
    android:background="@color/fon">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/containerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- шапка -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- название -->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Мои посевы"
                    android:fontFamily="@font/cygre_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:gravity="center"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/addPlant"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add"/>

            </LinearLayout>

            <!-- поиск и фильтр -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:iconifiedByDefault="false"
                    android:queryHint="@string/search_hint"
                    android:inputType="textVisiblePassword"
                    android:imeOptions="actionSearch"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/bg_search_view" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/categoryContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="все"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/cereals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="зерновые"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/root_vegetables"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="корнеплодные"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>


                        <Button
                            android:id="@+id/feed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="кормовые"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/legumes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="бобовые"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/vegetable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="овощные"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/berry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="ягодные"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/oilseeds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="масличные"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>

                        <Button
                            android:id="@+id/technical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="технические"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="8dp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>


                        <Button
                            android:id="@+id/floral"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cygre_regular"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="12dp"
                            android:text="цветочные"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp"/>


                    </LinearLayout>

                </HorizontalScrollView>


                <LinearLayout
                    android:id="@+id/statusContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/activity"
                        android:layout_width="67dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="4dp"
                        android:text="активно"
                        android:textColor="@color/gray2"
                        android:textSize="12sp"
                        app:backgroundTint="@color/gray4"
                        app:cornerRadius="4dp" />


                    <Button
                        android:id="@+id/arhive"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:fontFamily="@font/cygre_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="4dp"
                        android:text="архив"
                        android:textColor="@color/gray2"
                        android:textSize="12sp"
                        app:backgroundTint="@color/gray4"
                        app:cornerRadius="4dp" />

                </LinearLayout>

            </LinearLayout>


            <!--карточи примеры -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPlantings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
