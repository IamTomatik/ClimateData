<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_createSowing.ChoiceNameFragment"
    android:background="@color/fon"
    android:id="@+id/fragmentChoiceSoil">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <!--шкала-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="4.5">

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black"/>

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black"/>


            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1.5"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black"/>


            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/radius"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Укажите тип почвы и площадь участка"
            android:fontFamily="@font/cygre_regular"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerSoil"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/cygre_regular"
                android:singleLine="true"
                android:layout_marginBottom="16dp"
                android:background="@drawable/spinner_underline" />


            <EditText
                android:id="@+id/editTextArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/cygre_regular"
                android:hint="площадь"
                android:inputType="textVisiblePassword"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:singleLine="true"
                android:textColor="@color/gray4"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <Switch
                android:id="@+id/switchDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="использовать по умолчанию"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="далее значение будет использователься поумолчанию"
                android:fontFamily="@font/cygre_regular"
                android:includeFontPadding="false"
                android:textColor="@color/gray2"
                android:textSize="13sp"/>

        </LinearLayout>


    </LinearLayout>
        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:fontFamily="@font/cygre_regular"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:text="продолжить"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:backgroundTint="@color/gray4"
            app:cornerRadius="4dp"/>
    </LinearLayout>

</FrameLayout>