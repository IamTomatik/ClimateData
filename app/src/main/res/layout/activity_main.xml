<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">


        <!--шапка-->
        <LinearLayout
            android:id="@+id/container_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!-- Левый текст -->
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cygre_regular"
                android:text="Деханова"
                android:textColor="@color/black"
                android:textSize="16sp" /> <!-- Картинка по центру -->

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/logo" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Правый текст -->
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cygre_regular"
                android:text="Виктория"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>


        <!--линия-->
        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="12dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--текст-->
            <LinearLayout
                android:id="@+id/container_main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_text_spor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/misto"
                    android:includeFontPadding="false"
                    android:text="СПОРЫ"
                    android:textColor="@color/black"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/text_capiton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cygre_regular"
                    android:includeFontPadding="false"
                    android:text="приложение для вашей рассады"
                    android:textColor="@color/black"
                    android:textSize="32sp" />
            </LinearLayout>




            <ImageView
                android:id="@+id/imgMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:cropToPadding="true"
                app:srcCompat="@drawable/man2"
                android:layout_marginTop="20dp"/>

        </LinearLayout>






    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>